{
  "name": "eslint-custom-rule-sample",
  "description": "Sample of eslint custom rule using TypeScript.   ⚠️ Based on ESLint v8",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:rule": "rm -r -f ./local-rules && tsc src/rules/src/index.ts --module nodenext --moduleResolution nodenext --outDir local-rules",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/rule-tester": "^6.13.2",
    "@typescript-eslint/utils": "^6.13.2",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-local-rules": "^2.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "5.2.2",
    "vite": "^5.0.0"
  },
  "author": "y-natani"
}
